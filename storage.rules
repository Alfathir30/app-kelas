rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images folder - authenticated users can upload, owners/editors can delete
    match /images/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['owner', 'editor'];
    }
    
    // Documents folder - authenticated users can upload, owners/editors can delete
    match /documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['owner', 'editor'];
    }
    
    // Profile pictures - users can manage their own
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
